<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.SliderFragment">


    <ImageView
        android:id="@+id/img_no_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/imagepreview"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_upload_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Upload Slider"
        app:layout_constraintEnd_toEndOf="@+id/img_no_image"
        app:layout_constraintStart_toStartOf="@+id/img_no_image"
        app:layout_constraintTop_toBottomOf="@+id/img_no_image" />
</androidx.constraintlayout.widget.ConstraintLayout>